@model CuentaCreacionViewModel

@{
    ViewData["Title"] = "Crear Cuenta";
}

<h1>Crear Cuenta</h1>
<h5>
    La cuenta se refiere a los distintos balances que tienes:
    tarjetas de crédito, cuenta de ahorro, préstamo, etc.
</h5>

<form asp-action="Crear">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TipoCuentaId" class="form-label"></label>
        <select asp-for="TipoCuentaId" asp-items="Model.TiposCuentas"></select>
        <span asp-validation-for="TipoCuentaId" class="text-danger"></span>
    </div>
</form>



