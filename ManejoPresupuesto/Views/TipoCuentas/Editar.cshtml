@model TipoCuenta
@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

<h1>Editar Tipo Cuenta: @Model.Nombre</h1>

<form asp-controller="TipoCuentas" asp-action="Editar">
    <input type="hidden" asp-for="IdTipoCuenta"/>
    <div class="mb-3">
        @* Con el asp-for lo que hacemos es que si no se cumple la validación entonces, no se borra lo escrito *@
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
