@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear tipo de Cuenta</h1>
<h5>El tipo de cuenta se refiere a como podemos agrupar cuentas
    Ejemplos: Préstamos, tarjetas de crédito
</h5>

@* El tagHelper asp-validation-summary se utiliza para validar los campos en el formulario  *@
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="TipoCuentas" asp-action="Crear">
    <div class="mb-3">
        @* Con el asp-for lo que hacemos es que si no se cumple la validación entonces, no se borra lo escrito *@
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Edad" class="form-label"></label>
        <input asp-for="Edad" class="form-control" />
        <span asp-validation-for="Edad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="URL" class="form-label"></label>
        <input asp-for="URL" class="form-control" />
        <span asp-validation-for="URL" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TarjetaDeCredito" class="form-label"></label>
        <input asp-for="TarjetaDeCredito" class="form-control" />
        <span asp-validation-for="TarjetaDeCredito" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>


@* Se coloca como sección para respetar el orden en que se ejecuten los scripts en el layout *@
@section scripts {
    <partial name="_ValidationScriptsPartial" />
}


